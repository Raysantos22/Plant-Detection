<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlantDetection">
        <activity
            android:name=".ConditionDetailActivity"
            android:exported="false" />
        <!-- Splash Activity as launcher -->
        <activity
            android:name="com.Plantdetection.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Onboarding flow activities -->
        <activity
            android:name="com.Plantdetection.OnboardingActivity"
            android:exported="false" />
        <activity
            android:name=".VegetableSelectionActivity"
            android:exported="false" />
        <activity
            android:name="com.Plantdetection.LoadingActivity"
            android:exported="false" /> <!-- Main camera activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <receiver
            android:name="Plantdetection.NotificationReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.PlantDetection.SHOW_NOTIFICATION" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>